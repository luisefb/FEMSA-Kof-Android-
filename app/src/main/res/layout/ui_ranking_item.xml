<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/rl_avatar"
        android:layout_width="62dp"
        android:layout_height="62dp">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_avatar" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/image_ranking_mask" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/rl_avatar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_rank_1"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txt_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_rank_2"
            android:textColor="#555555"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#E0E0E0"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_bar1"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="60"
                android:background="#EB103E" />

            <ImageView
                android:id="@+id/img_bar2"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="40"
                android:background="#E0E0E0" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>