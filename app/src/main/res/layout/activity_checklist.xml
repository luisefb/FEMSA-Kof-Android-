<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_2">

    <include
        android:id="@+id/header"
        layout="@layout/header_toggle" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="250dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt_checklist_1"
                style="@style/bt_home"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:drawableTop="@drawable/bt_checklist_sell"
                android:tag="1"
                android:onClick="clickSection"
                android:text="@string/bt_checklist_sell" />

            <Button
                android:id="@+id/bt_checklist_2"
                style="@style/bt_home"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:drawableTop="@drawable/bt_checklist_storage"
                android:tag="2"
                android:onClick="clickSection"
                android:text="@string/bt_checklist_storage" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/bt_checklist_3"
                style="@style/bt_home"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:drawableTop="@drawable/bt_checklist_service"
                android:tag="3"
                android:onClick="clickSection"
                android:text="@string/bt_checklist_service" />

            <Button
                android:id="@+id/bt_checklist_4"
                style="@style/bt_home"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:drawableTop="@drawable/bt_checklist_delivery"
                android:tag="4"
                android:onClick="clickSection"
                android:text="@string/bt_checklist_delivery" />

        </TableRow>


    </TableLayout>

    <!--
    <Button
        android:id="@+id/bt_checklist_info"
        style="@style/bt_home"
        android:layout_width="wrap_content"
        android:drawableTop="@drawable/bt_checklist_info"
        android:tag="5"
        android:onClick="clickSection"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/bt_checklist_info" />
    -->

</RelativeLayout>